@inherits LayoutComponentBase

<PageTitle>MiniECommerce</PageTitle>

<MudDialogProvider
    FullWidth="true"
    MaxWidth="MaxWidth.ExtraSmall"
    CloseButton="true"
    DisableBackdropClick="true"
    NoHeader="true"
    Position="DialogPosition.Center"
    CloseOnEscapeKey="true"/>
<MudThemeProvider />
<div class="page h-100 w-100 d-flex">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="flex-grow-1 d-flex flex-column h-100 overflow-hidden">
        <div class="top-row px-4 auth">
            <LoginControl />
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content flex-grow-1 px-4 overflow-auto">
            @Body
        </article>

        <footer class="p-2 d-flex align-items-center gap-2">
            <label>Admin: </label>
            <a href="/product-management">Product management</a>
        </footer>
    </main>
</div>
