@page "/profile"
@using UserService.Library


@if(_userInfo is not null)
{
    <div class="flex flex-col gap-2">
        <MudTextField 
            T="string" 
            @bind-Text="_userInfo.FullName" 
            Disabled="true"
            Label="@nameof(UserInfoView.FullName)" />
        <MudTextField 
            T="string" 
            @bind-Text="_userInfo.Email" 
            Disabled="true"
            Label="@nameof(UserInfoView.Email)" />

        <div class="d-flex gap-4 w-100">
            <div class="d-flex flex-column gap-2 flex-grow-1">
                <MudTextField 
                    T="string" 
                    @bind-Text="_userInfo.DeliveryAddress" 
                    Label="@nameof(UserInfoView.DeliveryAddress)" />
                <MudTextField 
                    T="string" 
                    @bind-Text="_userInfo.DeliveryAddressPostalCode" 
                    Label="@nameof(UserInfoView.DeliveryAddressPostalCode)" />
                <MudTextField T="string" 
                    @bind-Text="_userInfo.DeliveryAddressPostalOffice" 
                    Label="@nameof(UserInfoView.DeliveryAddressPostalOffice)" />
                <MudTextField 
                    T="string" 
                    @bind-Text="_userInfo.DeliveryAddressCountry" 
                    Label="@nameof(UserInfoView.DeliveryAddressCountry)" />
            </div>
            <div class="d-flex flex-column gap-2 flex-grow-1">
                <MudTextField 
                    T="string" 
                    @bind-Text="_userInfo.InvoiceAddress" 
                    Label="@nameof(UserInfoView.InvoiceAddress)" />
                <MudTextField 
                    T="string" 
                    @bind-Text="_userInfo.InvoiceAddressPostalCode" 
                    Label="@nameof(UserInfoView.InvoiceAddressPostalCode)" />
                <MudTextField T="string" 
                    @bind-Text="_userInfo.InvoiceAddressPostalOffice" 
                    Label="@nameof(UserInfoView.InvoiceAddressPostalOffice)" />
                <MudTextField 
                    T="string" 
                    @bind-Text="_userInfo.InvoiceAddressCountry" 
                    Label="@nameof(UserInfoView.InvoiceAddressCountry)" />
            </div>
        </div>

        <MudButton 
            Class="mt-2" 
            Variant="Variant.Outlined" 
            FullWidth="true" 
            Color="Color.Secondary"
            OnClick="FillInDummyData">Use dummy data</MudButton>

        <MudButton 
            Class="mt-2" 
            Variant="Variant.Outlined" 
            FullWidth="true" 
            Color="Color.Primary"
            OnClick="Save">Save</MudButton>
    </div>
}